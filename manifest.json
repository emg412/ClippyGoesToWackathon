{
 "manifest_version": 2,
 "name": "ClippyGoesToWackathon",
 "description": "Browser extension to help manage financial decisions, specifically with online shopping.",
 "icons": {
        "128": "icon128.png",
        "32": "icon32.png",
        "48": "icon.png"
    },
 "background": {
 	"scripts": ["background.js"],
 	"persistent": true
 },
 "browser_action": {
   "default_icon": "tab-icon.png",
   "default_title": "Settings",
   "default_page": "localPage.html"
 },
 
 "content_scripts": [{
 	"matches": ["https://www.amazon.com/*", "https://www.ebay.com/*"],
 	"all frames": true,
 	"run at": "document-idle",
 	"js": ["generalContent.js"]
 },
 {
  "matches": ["https://www.target.com/*", "https://www.ae.com/*"],
  "all frames": true,
  "run at": "document-idle",
  "js": ["clothingContent.js"]
 }, {
 	"matches": ["https://www.papajohns.com/*", "https://www.insomnniacookies.com/*"],
 	"all frames": true,
 	"run at": "document-idle",
 	"js": ["foodContent.js"]
 },
 {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
 }
],



 "version": "1",
 "author": "Wackathon",



"browser_action": {
   "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png"
   },


   "default_title": "Jalape√±o",
   "default_popup": "popup.html"
},

 "permissions": ["activeTab", "pageCapture", "tabs", "storage"]
}
