{
 "manifest_version": 2,
 "name": "ClippyGoesToWackathon",
 "description": "Browser extension to help manage financial decisions, specifically with online shopping.",
 "background": {
 	"scripts": ["background.js"],
 	"persistent": true
 },
 "content_scripts":[{
 	"matches": ["https://www.amazon.com/*", "https://www.ebay.com/*"],
 	"all frames": true,
 	"run at": "document-idle",
 	"js": ["generalContentScript.js"]
 },
 {
 	"matches": ["https://www.papajohns.com/*", "https://www.insomnniacookies.com/*"],
 	"all frames": true,
 	"run at": "document-idle",
 	"js": ["foodContentScript.js"]
 },
],

 "version": "1",
 "author": "Wackathon",
"browser_action": {
   "default_icon": "tab-icon.png",
   "default_title": "Have a good day"
 },
"chrome_url_overrides" : {
  "newtab": "newtab.html"
},
 "permissions": ["activeTab", "pageCapture", "tabs"]
}
